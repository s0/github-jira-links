{
  "manifest_version": 2,
  "name": "Links for GitHub & Jira",
  "description": "Chrome extension that adds inks to JIRA issues from GitHub issues and PRs",
  "version": "0.0.3",
  "permissions": [
    "storage"
  ],
  "optional_permissions": [
    "https://*/*"
  ],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_title": "Configure Links for GitHub & Jira"
  },
  "options_page": "options.html"
}
